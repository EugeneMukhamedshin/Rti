<Window x:Class="Rti.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ЭЛМА-1" Height="300" Width="241.947" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="20,2,20,2"/>
            </Style>
        </StackPanel.Resources>
        <Button Content="Новая заявка" Command="{Binding CreateNewRequestCommand}"/>
        <Grid Margin="20,2,20,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Content="№ заявки" Grid.Column="0"/>
            <ComboBox ItemsSource="{Binding Requests}" SelectedItem="{Binding SelectedRequest}" DisplayMemberPath="Number" Grid.Column="1"/>
            <Button Content="..." Command="{Binding OpenRequestCommand}" Margin="3,0,0,0" Grid.Column="2"/>
        </Grid>
        <Button Content="Справочники" Command="{Binding OpenDictionaryListCommand}"/>
    </StackPanel>
</Window>
