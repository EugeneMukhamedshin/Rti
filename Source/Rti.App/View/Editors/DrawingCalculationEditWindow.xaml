<dx:DXWindow
    x:Class="Rti.App.View.Editors.DrawingCalculationEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:lists="clr-namespace:Rti.App.View.Lists"
    xmlns:domain="clr-namespace:Rti.Model.Domain;assembly=Rti.Model"
    xmlns:entities="clr-namespace:Rti.ViewModel.Entities;assembly=Rti.ViewModel"
    Width="470" Height="390" MinWidth="470" MinHeight="390" Title="{Binding Name}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <dxprg:PropertyGridControl SortMode="Definitions" Grid.Row="0" ShowMenuButtonInRows="False" SelectedObject="{Binding Entity.PlanCalculation}" ShowProperties="WithPropertyDefinitions" ShowCategories="False" ShowToolPanel="False" ShowSearchBox="False">
            <dxprg:PropertyGridControl.PropertyDefinitions>
                <dxprg:PropertyDefinition Header="1. Сырье и материалы" Path="MainMaterial" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="1.1. Резиновая смесь" Path="Rubber"/>
                <dxprg:PropertyDefinition Header="1.2. Клей" Path="Clue"/>
                <dxprg:PropertyDefinition Header="1.3. Арматура" Path="Armature"/>
                <dxprg:PropertyDefinition Header="1.4. Песок" Path="Sand"/>
                <dxprg:PropertyDefinition Header="1.5. Ткань" Path="Textile"/>
                <dxprg:PropertyDefinition Header="1.6. Другое" Path="Other"/>
                <dxprg:PropertyDefinition Header="2. Транспортные" Path="Transport" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="3. Основная зарплата" Path="MainSalary" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="4. Дополнительная зарплата" Path="AdditionalSalary" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="5. Отчисления ЕСН" Path="FixedTax" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="6. Общецеховые" Path="TotalDivision" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="7. Общепроизводственные" Path="TotalManufacture" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="8. Итого" Path="MainSummary" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="9. Электроэнергия для формовых" Path="PowerForFormed" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="10. Электроэнергия прочая" Path="OtherPower" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="11. Итого" Path="MainAndPowerSummary" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="12. Коммерческие" Path="Unforseen" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="13. Себестоимость" Path="NetCost" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="14. Рентабельность" Path="Profitability" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="15. Цена" Path="Price" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="16. НДС" Path="NdsTax" IsReadOnly="True"/>
                <dxprg:PropertyDefinition Header="17. Всего" Path="Summary" IsReadOnly="True"/>
            </dxprg:PropertyGridControl.PropertyDefinitions>
        </dxprg:PropertyGridControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Расчет" Command="{Binding CalculateCommand}" Width="90" Margin="5" IsDefault="True" TabIndex="900"></Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Сохранить" Command="{Binding OkCommand}" Width="90" Margin="5" IsDefault="True" TabIndex="1000"></Button>
            <Button Content="Отмена"  Command="{Binding CancelCommand}" Width="90" Margin="5" TabIndex="1001"></Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>
