<dx:DXWindow
    x:Class="Rti.App.View.Lists.RequestListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:lists="clr-namespace:Rti.App.View.Lists"
    Title="Реестр активных заявок" Height="350" Width="1024"
    >

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <!--<TextBlock Text="Дата начала" Margin="5" VerticalAlignment="Center"/>
            <xctk:DateTimePicker TabIndex="1" Margin="5"  VerticalAlignment="Center" ShowButtonSpinner="False" Width="100" Value="{Binding StartDate}" AutoCloseCalendar="True" AllowTextInput="False" AllowSpin="False" Format="ShortDate" TimePickerVisibility="Collapsed"/>
            <TextBlock Text="Дата окончания" Margin="5" VerticalAlignment="Center"/>
            <xctk:DateTimePicker TabIndex="2" Margin="5"  VerticalAlignment="Center" ShowButtonSpinner="False" Width="100" Value="{Binding EndDate}" AutoCloseCalendar="True" AllowTextInput="False" AllowSpin="False" Format="ShortDate" TimePickerVisibility="Collapsed"/>-->
                <Button Content="Обновить" Command="{Binding RefreshCommand}" Margin="5"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button Content="+" Command="{Binding AddRequestCommand}" Width="32" Height="32" Margin="5" TabIndex="4"></Button>
                <Button Content="-" Command="{Binding DeleteRequestCommand}" Width="32" Height="32" Margin="5" TabIndex="5"></Button>
                <Button Content="..." Command="{Binding EditRequestCommand}" CommandParameter="{Binding SelectedItem,Mode=OneWay}" Width="32" Height="32" Margin="5" TabIndex="6"/>
            </StackPanel>
            <dxg:GridControl TabIndex="7" Margin="5" AutoGenerateColumns="None" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" SelectionMode="Row" Grid.Row="2">
                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand EventName="MouseDoubleClick" Command="{Binding EditRequestCommand}" PassEventArgsToCommand="True">
                        <dxmvvm:EventToCommand.EventArgsConverter>
                            <dx:EventArgsToDataRowConverter/>
                        </dxmvvm:EventToCommand.EventArgsConverter>
                    </dxmvvm:EventToCommand>
                </dxmvvm:Interaction.Behaviors>
                <dxg:GridControl.Resources>
                    <Style TargetType="dxg:GridColumn">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </dxg:GridControl.Resources>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="Number" Header="Номер заявки" ReadOnly="True" Width="50"/>
                    <dxg:GridColumn FieldName="RegDate" Header="Дата регистрации" Width="100"/>
                    <dxg:GridColumn Header="В произ-водстве" Width="60">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsEnabled="False" IsChecked="{Binding RowData.Row.IsWorkStarted,Mode=OneWay}" HorizontalAlignment="Center"></CheckBox>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="WorkStartDate" Header="Дата запуска в производство" Width="100"/>
                    <dxg:GridColumn FieldName="EquipmentLeadTime" Header="Срок изготовления оснастки " Width="100"/>
                    <dxg:GridColumn FieldName="LeadTime" Header="Срок изготовления" Width="100"/>
                    <dxg:GridColumn FieldName="ShipDate" Header="Дата отгрузки" Width="100"/>
                    <dxg:GridColumn FieldName="Status" Header="Статус" Width="50">
                        <dxg:GridColumn.CellTemplateSelector>
                            <lists:RequestStatusTemplateSelector>
                                <lists:RequestStatusTemplateSelector.YellowTemplate>
                                    <DataTemplate>
                                        <Border Background="Yellow" Margin="2"></Border>
                                    </DataTemplate>
                                </lists:RequestStatusTemplateSelector.YellowTemplate>
                                <lists:RequestStatusTemplateSelector.RedTemplate>
                                    <DataTemplate>
                                        <Border Background="Red" Margin="2"></Border>
                                    </DataTemplate>
                                </lists:RequestStatusTemplateSelector.RedTemplate>
                                <lists:RequestStatusTemplateSelector.GreenTemplate>
                                    <DataTemplate>
                                        <Border Background="Green" Margin="2"></Border>
                                    </DataTemplate>
                                </lists:RequestStatusTemplateSelector.GreenTemplate>
                            </lists:RequestStatusTemplateSelector>
                        </dxg:GridColumn.CellTemplateSelector>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="LastPaymentDate" Header="Дата оплаты" Width="100"/>
                    <dxg:GridColumn FieldName="LastShipmentDate" Header="Дата отгрузки факт" Width="100"/>
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView EnableImmediatePosting="True" AllowEditing="False" AllowColumnMoving="False" AllowSorting="False" AllowColumnFiltering="False" AllowPerPixelScrolling="True" ShowTotalSummary="True" AutoWidth="False" AllowGrouping="False" ShowGroupPanel="False"/>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </Grid>
        <Border Opacity="0.8" Visibility="{Binding IsLoading,Converter={StaticResource BooleanToVisibilityConverter}}" Background="AliceBlue">
            <StackPanel VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="32" Opacity="0.5"/>
                <Label Content="{Binding LoadingMessage}" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</dx:DXWindow>
